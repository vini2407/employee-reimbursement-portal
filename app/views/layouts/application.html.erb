<!DOCTYPE html>
<html>
  <head>
    <title>Employee Reimbursement Portal</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    >

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <%= stylesheet_link_tag "application", media: "all" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand" href="#">Reimbursement Portal</a>
        <% if current_user %>
          <ul class="navbar-nav ms-auto">
            <li class="nav-item me-3 text-light">
              Welcome, <%= current_user.name %>
            </li>
            <li class="nav-item">
              <%= link_to "Logout", session_path(:id), method: :delete, class: "btn btn-outline-light btn-sm" %>
            </li>
          </ul>
        <% end %>
      </div>
    </nav>

    <div class="container mt-4">
      <% flash.each do |type, message| %>
        <div class="alert alert-<%= type == "notice" ? "success" : "danger" %> alert-dismissible fade show">
          <%= message %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% end %>

      <%= yield %>
    </div>
  </body>
</html>
